{% extends "auth/base.jinja" %}

{% block main %}
<div class="columns is-centered">
  <div class="column is-4">
    <div class="title has-text-centered">Login to Flash</div>
    <div class="box">
      <div class="login-form">
        <form action="" method="POST">
          {{ form.hidden_tag() }}
          <div class="field">
            <label class="label">{{ form.email.label.text }}</label>
            <div class="control">
              <input type="email" class="input" name="{{ form.email.name }}" id="{{ form.email.id }}">
            </div>
          </div>
          <div class="field">
            <label class="label">{{ form.password.label.text }}</label>
            <div class="control">
              <input type="password" class="input" name="{{ form.password.name }}" id="{{ form.password.id }}">
            </div>
            <p class="help"><a href="{{ url_for('auth.password_reset_request') }}">Forgot password?</a></p>
          </div>
          <div class="field">
            <div class="control">
              <label class="checkbox">
                <input type="checkbox" name="{{ form.remember_me.name }}" id="{{ form.remember_me.id }}">
                Keep me logged in
              </label>
            </div>
          </div>
          <div class="field submit-field">
            <div class="control">
              <button type="submit" class="button is-primary is-fullwidth">Login</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
